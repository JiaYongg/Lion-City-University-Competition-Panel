<body>
    @*Holding entire form aka container *@
    <div class="container">
        <p>Create Judging Criteria</p>
        @*Holding criterias*@
    <form asp-action="JudgeCriteria">
        <div class="col-md-6">
            @*Criteria indexs*@
            <div class="form-group col-6">
                <span class="criteria-value">Criteria @ViewData["criteriaNo"]</span>
