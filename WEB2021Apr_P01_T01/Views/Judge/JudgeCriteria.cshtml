@model WEB2021Apr_P01_T01.Models.Criteria

@{
    ViewData["Title"] = "Judge Criteria";
}


<style>
    ::-webkit-input-placeholder {
        opacity: 0.5;
    }
</style>
<body>
    @*Holding entire form aka container *@
    <div class="container">
        <p>Create Judging Criteria</p>
        @*Holding criterias*@
    <form asp-action="JudgeCriteria" class="criteria-container">
        <div class="col-sm-6">
            <div class="criteria-header">
                <span class="criteria-value">Criteria @ViewData["criteriaNo"]</span>
                <div id="criteria-image">
                    <img src="~/images/red-cross.png" style="width: 100%" />
                </div>
            </div>
            <div class="criteria-content">
                <div class="form-group d-flex flex-column">
                    <label asp-for="Weightage" class="criteria-label"></label>
                    <input asp-for="Weightage" class="criteria-text" placeholder="Weightage in % " style="width:50%" />
                    <span asp-validation-for="Weightage" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column">
                    <label asp-for="CriteriaName" class="criteria-label"></label>
                    <input asp-for="CriteriaName" class="criteria-text" placeholder="Criteria Name" />
                    <span asp-validation-for="CriteriaName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="criteria-footer col-12 flex-row d-flex">
            <p class="criteria-error col-7">@TempData["criteriaError"]</p>
            <input type="button" value="Add new criteria" class="btn background-gold btn-180 btn-login col-2 criteria-btn"/>
            <input type="submit" value="Create" class="btn background-gold btn-180 btn-login col-2 criteria-btn" />
        </div>
    </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
