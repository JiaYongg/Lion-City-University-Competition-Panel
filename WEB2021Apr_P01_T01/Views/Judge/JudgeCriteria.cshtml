                    <label asp-for="Weightage" class="control-label"></label>
                    <input asp-for="Weightage" class="form-control" />
                    <span asp-validation-for="Weightage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CriteriaName" class="control-label"></label>
                    <input asp-for="CriteriaName" class="form-control" />
                    <span asp-validation-for="CriteriaName" class="text-danger"></span>
                </div>
            </div>
        </div>
        @*Error msg & btn*@
        <div class="flex-row">
            <div class="col-6">
                Weightage must total to 100%@TempData["Error Message"]
            </div>
            <div class="col-4">
                <input type="submit" value="Add new criteria" class="btn btn-primary" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
