@model WEB2021Apr_P01_T01.Models.Criteria

@{
    ViewData["Title"] = "Judge Criteria";
}


<style>
    ::-webkit-input-placeholder {
        opacity: 0.5;
    }

    @@media (max-width: 769px) {
        .criteria-footer {
            flex-direction: column !important;
        }

        .criteria-footer input {
            width: 100% !important;
        }
    }
</style>
<body>
    @*Holding entire form aka container *@
    <div class="container">
        <p>Create Judging Criteria for @ViewData["compName"]</p>
        @*Holding criterias*@
        <form asp-action="Create" class="criteria-container">
            <div class="col-sm-6">
                <div class="criteria-header">
                    <span class="criteria-value">Criteria 1</span>
                    <div id="criteria-image">
                        <button formaction="DeleteCriteria" class="criteria-delete"><i class="fas fa-times-circle" style="color: red; font-size: xx-large"></i></button>
                    </div>
                </div>
                <div class="criteria-content">
                    <div class="form-group d-flex flex-column">
                        <label asp-for="Weightage" class="criteria-label"></label>
                        <input asp-for="Weightage" class="criteria-text" placeholder="Weightage in % " style="width:50%" />
                        <span asp-validation-for="Weightage" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex flex-column">
                        <label asp-for="CriteriaName" class="criteria-label"></label>
                        <input asp-for="CriteriaName" class="criteria-text" placeholder="Criteria Name" />
                        <span asp-validation-for="CriteriaName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @{ if (Convert.ToBoolean(ViewData["ShowCriteria"]))
                {
                    for (int i = 2; i < Convert.ToInt32(ViewData["criteriaNo"].ToString()); i++)
                    {
                        <div class="col-sm-6">
                            <div class="criteria-header">
                                <span class="criteria-value">Criteria @i</span>
                                <div id="criteria-image">
                                    <button formaction="DeleteCriteria" class="criteria-delete"><i class="fas fa-times-circle" style="color: red; font-size: xx-large"></i></button>
                                </div>
                            </div>
                            <div class="criteria-content">
                                <div class="form-group d-flex flex-column">
                                    <label asp-for="Weightage" class="criteria-label"></label>
                                    <input asp-for="Weightage" class="criteria-text" placeholder="Weightage in % " style="width:50%" />
                                    <span asp-validation-for="Weightage" class="text-danger"></span>
                                </div>
                                <div class="form-group d-flex flex-column">
                                    <label asp-for="CriteriaName" class="criteria-label"></label>
                                    <input asp-for="CriteriaName" class="criteria-text" placeholder="Criteria Name" />
                                    <span asp-validation-for="CriteriaName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            <div class="criteria-footer col-12 flex-row d-flex">
                <p class="criteria-error col-7">@TempData["criteriaError"]</p>
                <input type="submit" value="Add new criteria" class="btn background-gold btn-180 btn-login criteria-btn" formaction="AddCriteria" />
                <input type="submit" value="Create" class="btn background-gold btn-180 btn-login criteria-btn" />
            </div>
        </form>
    </div>

</body>
