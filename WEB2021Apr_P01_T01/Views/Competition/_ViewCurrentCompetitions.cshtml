@model IEnumerable<WEB2021Apr_P01_T01.Models.Competition>

@if (Model.ToList().Count > 0)
{
    <div class="row">
        @foreach (var competition in Model)
        {
            <div class="card col-md-4 p-2 mt-4 shadow-sm bg-white rounded">
                <img class="card-img-top" src="~/images/no-image.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title gold">@competition.CompetitionName</h5>
                    <p class="card-text">@competition.AoiName</p>
                    <p class="card-text">Begins on <span class="gold">@Html.DisplayFor(model => competition.StartDate)</span></p>
                    <p class="card-text">Ends on <span class="gold">@Html.DisplayFor(model => competition.EndDate)</span></p>
                    <p class="card-text">Result releases on <span class="gold">@Html.DisplayFor(model => competition.ResultsReleaseDate)</span></p>
                </div>
                <div class="text-center pb-4">
                    <a class="btn background-blue btn-180" asp-controller="Competition" asp-action="CompetitionDetails" asp-route-id="@competition.CompetitionId">View Competition</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <span style="color:red;" class="text-center">There are no ongoing competitions presently.</span>
}