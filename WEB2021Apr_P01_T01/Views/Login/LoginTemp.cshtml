@model WEB2021Apr_P01_T01.Models.Login

@{
    ViewData["Title"] = "Login";
}

<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Competition Panel - Lion City University</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body style="background-image: url('../images/bg-login.jpg'); background-size: 100% auto">
    <form asp-controller="Login" asp-action="Login" method="post">
        <fieldset class="FormContent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="text-align: left;">
                <div class="col-sm-12">
                    <h2 style="text-decoration: underline;" class="gold"><b>Sign In</b></h2>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input asp-for="Email" class="form-control" placeholder="Email Address" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input asp-for="Password" class="form-control" autocomplete="off" placeholder="Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <!-- login button -->
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="submit" value="Login" class="btn background-gold btn-180 btn-login" />
                </div>
            </div>
            <p>Don't have an account? <a style="text-decoration: underline;" asp-controller="SignUp" asp-action="Index">Sign Up Now.</a></p>
        </fieldset>
    </form>
</body>
</html>