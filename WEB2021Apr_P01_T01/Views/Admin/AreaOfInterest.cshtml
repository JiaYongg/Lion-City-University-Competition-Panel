@model WEB2021Apr_P01_T01.Models.AreaInterest
@{
    ViewData["Title"] = "Area of Interest";
}

@{ 
    var name = (List<string>)ViewData["aoiName"];
}

<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Competition Panel - Lion City University</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="container vh70">
        <div class="d-flex" style="align-items: center; justify-content: space-between; margin: 0 15px;">
            <div class="aoi-titles">
                <p>Manage Area of Interest</p>
                <h2>Area of Interest</h2>
            </div>
            <div class="aoi-button">
                <input type="submit" data-toggle="modal" data-target="#addInterestModal" name="addNewInterest" value="Add New Interest" style="border: none; border-radius: 10px; background: #A98F64; color: white; padding: 10px 15px;" />
            </div>
        </div>

        <div class="col-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col" style="display: flex; justify-content: center;">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="selectAll" />
                                <label class="custom-control-label" for="selectAll"></label>
                            </div>
                        </th>
                        <th scope="col">Name of Interest: </th>
                    </tr>
                </thead>

                @for (int i = 0; i < Convert.ToInt32(ViewData["totalAOI"]); i++)
                 {
                    <tbody>
                        <tr>
                            <td class="align-middle">
                                <div class="custom-control custom-checkbox text-center" style="vertical-align: middle;">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1"></label>
                                </div>
                            </td>
                            <td class="d-flex justify-content-between align-items-center">
                                <div class="aoi-table-data">
                                    <p>@name[i]</p>
                                </div>
                                <div class="aoi-table-buttons" style="padding: 0 20px;">
                                    <button type="button" class="btn btn-default btn-circle" data-toggle="modal" data-target="#editModal" style="background: #A98F64;"><i class="fas fa-pen" style="color: white;"></i></button>
                                    <button type="button" class="btn btn-default btn-circle" data-toggle="modal" data-target="#deleteModal" style="background: #F25050;"><i class="fas fa-times" style="color: white; font-size: 16px;"></i></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                 }

            </table>
        </div>

        <div class="modal" id="editModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Area of Interest</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <label class="col-sm-12 col-form-label form-control-label">Name of New Area of Interest: </label>
                        <div class="col-sm-12 d-flex flex-column justify-content-center">
                            <form asp-action="Edit">
                                <input class="form-control" type="text" placeholder="Enter new name of area of interest: " style="margin-bottom: 10px;" required />
                                <button type="submit" class="btn btn-success col-sm-3">save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal" id="deleteModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Confirm Delete?</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="col-sm-12 d-flex justify-content-center">
                            <button asp-action="Delete" type="submit" class="btn btn-danger col-sm-6">delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal" id="addInterestModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Interest</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="col-sm-12">
                            <label class="col-sm-12 col-form-label form-control-label">Name of Area of Interest: </label>
                            <div class="col-sm-12">
                                <form asp-action="AddInterest">
                                    <input class="form-control" type="text" name="AoiName" placeholder="Enter name of area of interest: " required style="margin-bottom: 10px;" />
                                    <button type="submit" class="btn btn-success col-sm-6">Add Interest</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>